<!-- Modern Hero Banner with Video Background -->
<div class="position-relative overflow-hidden">
    <div class="hero-video-container" style="min-height: 85vh;">
        <!-- Video Background -->
        <video autoplay muted loop playsinline class="video-background w-100 h-100" style="object-fit: cover;">
            <source src="/images/kids2.mp4" type="video/mp4">
            <!-- Removed the dark rgba gradient from the fallback background -->
            <div class="fallback-bg" style="background: url('/images/kids-fallback.jpg') center/cover no-repeat;"></div>
        </video>

        <!-- Removed the <div class="video-overlay"></div> entirely -->
        <!-- Content: Added pt-5 (padding-top) to clear the navbar -->
        <div class="container h-100 position-relative z-2 pt-5">
            <div class="row h-100 align-items-center pt-5">
                <div class="col-lg-7 text-white mt-5">
                    <!-- Note: If your video is very bright, you may need 'text-dark' or a text-shadow for readability -->
                    <h1 class="display-1 fw-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">Building South Africa's Future Leaders</h1>
                    <p class="lead mb-4 fs-4" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.5);">Greenlane College provides exceptional education from <strong>Grade 1 to Grade 12</strong>, combining academic excellence with character development for holistic student growth.</p>
