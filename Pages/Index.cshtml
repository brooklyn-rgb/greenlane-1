<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Equalize card heights in each column
        function equalizeCardHeights() {
            // Left column cards
            const leftCards = document.querySelectorAll('.col-lg-3:first-child .card');
            let leftMaxHeight = 0;
            leftCards.forEach(card => {
                card.style.height = 'auto';
                leftMaxHeight = Math.max(leftMaxHeight, card.offsetHeight);
            });
            leftCards.forEach(card => {
                card.style.height = leftMaxHeight + 'px';
            });

            // Center column cards
            const centerCards = document.querySelectorAll('.col-lg-6 .card');
            centerCards.forEach(card => {
                card.style.height = 'auto';
            });

            // Right column cards
            const rightCards = document.querySelectorAll('.col-lg-3:last-child .card');
            let rightMaxHeight = 0;
            rightCards.forEach(card => {
                card.style.height = 'auto';
                rightMaxHeight = Math.max(rightMaxHeight, card.offsetHeight);
            });
            rightCards.forEach(card => {
                card.style.height = rightMaxHeight + 'px';
            });
        }

        // Run on load and resize
        equalizeCardHeights();
        window.addEventListener('resize', equalizeCardHeights);

        // Animate elements on scroll
        const animateOnScroll = function() {
            const elements = document.querySelectorAll('.card, .contact-item, .event-item');

            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;

                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };

        // Set initial state
        document.querySelectorAll('.card, .contact-item, .event-item').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });

        // Animate on scroll
        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll(); // Initial check
    });
</script>