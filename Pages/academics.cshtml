@page
@model greenlane.Pages.AcademicsModel
@{
    ViewData["Title"] = "Academic Curriculum | Greenlane College";
}

<!-- Hero Section -->
<section class="curriculum-hero py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-success mb-4">Academic Structure & Curriculum</h1>
                <p class="lead mb-4">
                    Greenlane College offers a comprehensive educational pathway from Grade 1 through Grade 12, designed to develop critical thinkers, problem solvers, and future-ready leaders.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="#academic-phases" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-mortarboard me-2"></i>Explore Phases
                    </a>
                    <a href="#subject-list" class="btn btn-outline-success btn-lg px-4">
                        <i class="bi bi-book me-2"></i>View Subjects
                    </a>
                    <a href="/Contact" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-question-circle me-2"></i>Curriculum Questions
                    </a>
                </div>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h3 class="h4 text-success mb-3">Our Educational Philosophy</h3>
                        <p class="mb-3">We believe in a balanced approach that combines:</p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Academic excellence with character development</li>
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Theoretical knowledge with practical application</li>
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Individual growth with community responsibility</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i> Local relevance with global perspectives</li>
                        </ul>
                        <div class="mt-4 pt-3 border-top">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i> All subjects follow the South African CAPS curriculum, enhanced with our institutional methodologies.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Academic Pathway Overview -->
<section class="py-5" id="academic-phases">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-success mb-3">Comprehensive Academic Pathway</h2>
            <p class="lead text-muted">A seamless educational journey from foundational learning to university preparation</p>
        </div>

        <div class="academic-timeline">
            @foreach (var phase in Model.AcademicPhases)
            {
                <div class="timeline-phase @phase.Color-phase">
                    <div class="phase-header">
                        <div class="phase-icon">
                            <i class="bi @phase.Icon"></i>
                        </div>
                        <div class="phase-title">
                            <h3 class="h4 fw-bold mb-1">@phase.Phase</h3>
                            <p class="phase-grades mb-0">@phase.Grades • @phase.AgeRange</p>
                        </div>
                    </div>
                    <div class="phase-image">
                        <img src="@phase.ImageUrl" alt="@phase.Phase" class="img-fluid rounded">
                    </div>
                    <div class="phase-description">
                        <p>@phase.Description</p>
                        <a href="#@phase.Phase.ToLower().Replace(" ", "-")" class="btn btn-outline-success btn-sm">
                            View Subjects <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Subject Breakdown by Phase -->
<section class="py-5 bg-light" id="subject-list">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Subject Breakdown by Academic Phase</h2>

        <!-- Foundation Phase -->
        <div class="phase-subjects mb-5" id="foundation-phase">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="h4 mb-0">
                        <i class="bi bi-house-door me-2"></i>Foundation Phase (Grade 1 - 3)
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="mb-4">Building strong literacy, numeracy, and life skills foundations through interactive, play-based learning approaches.</p>

                    <div class="row g-3">
                        @foreach (var subject in Model.FoundationPhaseSubjects)
                        {
                            <div class="col-md-6 col-lg-3">
                                <div class="subject-card">
                                    <div class="subject-icon">
                                        <i class="bi bi-book text-success"></i>
                                    </div>
                                    <h5 class="subject-name">@subject.Name</h5>
                                    <div class="subject-details">
                                        <span class="badge bg-success bg-opacity-10 text-success">@subject.Category</span>
                                        <small class="text-muted ms-2">@subject.Hours</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Intermediate Phase -->
        <div class="phase-subjects mb-5" id="intermediate-phase">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="h4 mb-0">
                        <i class="bi bi-book me-2"></i>Intermediate Phase (Grade 4 - 6)
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="mb-4">Developing subject specialization, critical thinking, and independent learning skills across diverse disciplines.</p>

                    <div class="row g-3">
                        @foreach (var subject in Model.IntermediatePhaseSubjects)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="subject-card">
                                    <div class="subject-icon">
                                        <i class="bi bi-pencil text-success"></i>
                                    </div>
                                    <h5 class="subject-name">@subject.Name</h5>
                                    <div class="subject-details">
                                        <span class="badge bg-success bg-opacity-10 text-success">@subject.Category</span>
                                        <small class="text-muted ms-2">@subject.Hours</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Senior Phase -->
        <div class="phase-subjects mb-5" id="senior-phase">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark py-3">
                    <h3 class="h4 mb-0">
                        <i class="bi bi-mortarboard me-2"></i>Senior Phase (Grade 7 - 9)
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="mb-4">Preparing for high school with advanced academic rigor, leadership opportunities, and career exploration.</p>

                    <div class="row g-3">
                        @foreach (var subject in Model.SeniorPhaseSubjects)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="subject-card">
                                    <div class="subject-icon">
                                        <i class="bi bi-gear text-warning"></i>
                                    </div>
                                    <h5 class="subject-name">@subject.Name</h5>
                                    <div class="subject-details">
                                        <span class="badge bg-warning bg-opacity-10 text-warning">@subject.Category</span>
                                        <small class="text-muted ms-2">@subject.Hours</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- FET Phase -->
        <div class="phase-subjects" id="fet-phase">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="h4 mb-0">
                        <i class="bi bi-award me-2"></i>FET Phase (Grade 10 - 12)
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Subject Selection Guidance</h5>
                        <p class="mb-0">Students select 7 subjects: 4 compulsory + 3 electives based on their chosen career pathway. Career guidance sessions help students make informed choices.</p>
                    </div>

                    <div class="row">
                        <!-- Compulsory Subjects -->
                        <div class="col-lg-6 mb-4">
                            <h4 class="h5 fw-bold mb-3 text-success">Compulsory Subjects</h4>
                            <div class="row g-3">
                                @foreach (var subject in Model.FETPhaseSubjects.Where(s => s.IsCore))
                                {
                                    <div class="col-md-6">
                                        <div class="subject-card core">
                                            <div class="subject-icon">
                                                <i class="bi bi-star-fill text-danger"></i>
                                            </div>
                                            <h5 class="subject-name">@subject.Name</h5>
                                            <div class="subject-details">
                                                <span class="badge bg-danger bg-opacity-10 text-danger">Core</span>
                                                <small class="text-muted ms-2">@subject.Hours</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Elective Subjects -->
                        <div class="col-lg-6">
                            <h4 class="h5 fw-bold mb-3 text-success">Elective Subjects (Choose 3)</h4>
                            <div class="row g-3">
                                @foreach (var subject in Model.FETPhaseSubjects.Where(s => !s.IsCore))
                                {
                                    <div class="col-md-6">
                                        <div class="subject-card elective">
                                            <div class="subject-icon">
                                                <i class="bi bi-bookmark text-success"></i>
                                            </div>
                                            <h5 class="subject-name">@subject.Name</h5>
                                            <div class="subject-details">
                                                <span class="badge bg-success bg-opacity-10 text-success">@subject.Category</span>
                                                <small class="text-muted ms-2">@subject.Hours</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Career Pathways -->
                    <div class="mt-5 pt-4 border-top">
                        <h4 class="h5 fw-bold mb-3 text-success">Suggested Subject Combinations for Career Pathways</h4>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="card border-primary h-100">
                                    <div class="card-body">
                                        <h5 class="card-title text-success">Science & Health</h5>
                                        <p class="card-text small">Mathematics, Physical Sciences, Life Sciences</p>
                                        <small class="text-muted">For: Medicine, Engineering, Research</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-success h-100">
                                    <div class="card-body">
                                        <h5 class="card-title text-success">Commerce & Business</h5>
                                        <p class="card-text small">Mathematics, Business Studies, Accounting</p>
                                        <small class="text-muted">For: Finance, Management, Entrepreneurship</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-warning h-100">
                                    <div class="card-body">
                                        <h5 class="card-title text-warning">Humanities & Arts</h5>
                                        <p class="card-text small">History, Geography, Creative Arts</p>
                                        <small class="text-muted">For: Law, Education, Social Sciences</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

