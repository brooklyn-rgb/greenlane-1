<style>
    /* Custom styles for Curriculum page */
    .curriculum-hero {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    /* Academic Timeline */
    .academic-timeline {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .timeline-phase {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .timeline-phase:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

    .phase-header {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        color: white;
    }

    .foundation-phase .phase-header {
        background: linear-gradient(135deg, #1a4d2e, #2e7d32);
    }

    .intermediate-phase .phase-header {
        background: linear-gradient(135deg, #1976d2, #2196f3);
    }

    .senior-phase .phase-header {
        background: linear-gradient(135deg, #f57c00, #ff9800);
    }

    .fet-phase .phase-header {
        background: linear-gradient(135deg, #c2185b, #e91e63);
    }

    .phase-icon {
        font-size: 2rem;
        margin-right: 1rem;
        background: rgba(255,255,255,0.2);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .phase-grades {
        opacity: 0.9;
        font-size: 0.9rem;
    }

    .phase-image {
        padding: 1.5rem;
    }

        .phase-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

    .phase-description {
        padding: 1.5rem;
        padding-top: 0;
    }

    /* Subject Cards */
    .subject-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 1.25rem;
        transition: all 0.3s ease;
        height: 100%;
    }

        .subject-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-color: var(--primary);
        }

        .subject-card.core {
            border-left: 4px solid var(--danger);
        }

        .subject-card.elective {
            border-left: 4px solid var(--primary);
        }

    .subject-icon {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .subject-name {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .subject-details {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    /* Extracurricular Icons */
    .extracurricular-icon {
        width: 80px;
        height: 80px;
        background: rgba(26, 77, 46, 0.1);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    /* Academic Calendar */
    .academic-calendar .term {
        padding-bottom: 1rem;
        border-bottom: 1px dashed #dee2e6;
    }

        .academic-calendar .term:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .academic-timeline {
            grid-template-columns: 1fr;
        }

        .phase-header {
            flex-direction: column;
            text-align: center;
        }

        .phase-icon {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .subject-card {
            margin-bottom: 1rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Smooth scrolling for phase links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const href = this.getAttribute('href');
                if (href !== '#') {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Highlight active phase on scroll
        const phaseSections = document.querySelectorAll('.phase-subjects');
        const phaseLinks = document.querySelectorAll('.timeline-phase a');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const phaseId = entry.target.id;
                    phaseLinks.forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === `#${phaseId}`) {
                            link.classList.add('active');
                        }
                    });
                }
            });
        }, {
            threshold: 0.3
        });

        phaseSections.forEach(section => observer.observe(section));

        // Subject card animations
        const subjectCards = document.querySelectorAll('.subject-card');
        subjectCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.05}s`;
            card.classList.add('fade-in');
        });

        // Print curriculum button
        const printBtn = document.createElement('button');
        printBtn.className = 'btn btn-outline-success position-fixed bottom-0 end-0 m-3 d-print-none';
        printBtn.innerHTML = '<i class="bi bi-printer me-2"></i>Print Curriculum';
        printBtn.style.zIndex = '1000';
        printBtn.onclick = () => window.print();
        document.body.appendChild(printBtn);
    });
</script>