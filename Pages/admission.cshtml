@page
@model greenlane.Pages.AdmissionsModel
@{
    ViewData["Title"] = "Greenlane College | Admissions Process 2026";
}

<!-- Hero Banner -->
<div class="position-relative">
    <div class="hero-banner" style="background: linear-gradient(rgba(26, 77, 46, 0.85), rgba(26, 77, 46, 0.9)), url('/images/banner/admissions-banner.jpg') center/cover no-repeat; min-height: 60vh;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-8 text-white">
                    <h1 class="display-3 fw-bold mb-3">Admissions 2026</h1>
                    <p class="lead fs-4">Begin Your Educational Journey with Greenlane College</p>
                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <a href="#application-process" class="btn btn-light btn-lg px-4 py-3">
                            <i class="bi bi-clipboard-check me-2"></i> Apply Now
                        </a>
                        <a href="#requirements" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="bi bi-list-check me-2"></i> View Requirements
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Important Dates Banner -->
<div class="bg-warning py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center flex-column flex-md-row">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <i class="bi bi-calendar-date-fill fs-4 me-3"></i>
                <div>
                    <strong class="fs-5">2026 Admissions Now Open!</strong>
                    
                </div>
            </div>
            <div class="text-md-end">
                <div class="text-dark fw-bold">Limited Spaces Available</div>
                <div class="text-dark small">Apply early to secure your placement</div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    <div class="row g-4 align-items-start">
        <!-- Left Column: Quick Links & Timeline -->
        <div class="col-lg-3">
            <div class="sticky-column">
                <!-- Quick Links -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-link-45deg me-2"></i>Admissions Quick Links</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#application-process" class="list-group-item list-group-item-action py-3 active">
                            <i class="bi bi-clipboard-check me-2 text-success"></i>Application Process
                        </a>
                        <a href="#requirements" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-list-check me-2 text-success"></i>Requirements
                        </a>
                        <a href="#documents" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-file-earmark-text me-2 text-success"></i>Required Documents
                        </a>
                        <a href="#assessment" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-pencil-square me-2 text-success"></i>Assessment & Testing
                        </a>
                        <a href="#fees" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-cash-stack me-2 text-success"></i>Admission Fees
                        </a>
                        <a href="#faq" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-question-circle me-2 text-success"></i>FAQ
                        </a>
                        <a href="/downloads/application" class="list-group-item list-group-item-action py-3">
                            <i class="bi bi-download me-2 text-success"></i>Download Forms
                        </a>
                    </div>
                </div>

                <!-- Application Timeline -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Application Open</h5>
                    </div>
                    <div class="card-body p-3">
                        <div class="timeline-item p-3 border-bottom position-relative ps-4">
                            <div class="timeline-dot position-absolute bg-success rounded-circle" style="width: 12px; height: 12px; left: 0; top: 25px;"></div>
                            <div class="text-success fw-bold mb-1">2026</div>
                            <div class="text-muted small">Applications Open</div>
                        </div>
                      
                      
                        <div class="timeline-item p-3 position-relative ps-4">
                            <div class="timeline-dot position-absolute bg-success rounded-circle" style="width: 12px; height: 12px; left: 0; top: 25px;"></div>
                            <div class="text-success fw-bold mb-1">2026</div>
                            <div class="text-muted small">Admissions Open</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Center Column: Main Content -->
        <div class="col-lg-6">
            <!-- Introduction -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-3">Welcome to Greenlane College Admissions</h2>
                    <p class="fs-5 mb-4">
                        We are delighted that you are considering Greenlane College for your child's education. Our admissions process is designed to be transparent, straightforward, and supportive as we welcome new students into our vibrant learning community.
                    </p>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <div class="icon-wrapper mb-3">
                                    <i class="bi bi-people-fill text-success fs-2"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Personalized Approach</h5>
                                <p class="text-muted small mb-0">Individual attention throughout the admissions process</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <div class="icon-wrapper mb-3">
                                    <i class="bi bi-shield-check text-success fs-2"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Transparent Process</h5>
                                <p class="text-muted small mb-0">Clear guidelines and regular communication</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <div class="icon-wrapper mb-3">
                                    <i class="bi bi-clock-history text-info fs-2"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Timely Decisions</h5>
                                <p class="text-muted small mb-0">Application outcome within 24 hours</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Application Process -->
            <div id="application-process" class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Application Process</h3>
                </div>
                <div class="card-body p-4">
                    <div class="process-steps">
                        <!-- Step 1 -->
                        <div class="step-item d-flex mb-4">
                            <div class="step-number flex-shrink-0 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fs-5 fw-bold">1</span>
                            </div>
                            <div class="step-content ms-4">
                                <h5 class="fw-bold mb-2">Initial Inquiry & School Tour</h5>
                                <p class="text-muted mb-3">Contact our admissions office or book a school tour to experience our campus and meet our staff.</p>
                                <a href="/contact" class="btn btn-outline-success btn-sm">Book a Tour</a>
                            </div>
                        </div>

                        <!-- Step 2 -->
                        <div class="step-item d-flex mb-4">
                            <div class="step-number flex-shrink-0 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fs-5 fw-bold">2</span>
                            </div>
                            <div class="step-content ms-4">
                                <h5 class="fw-bold mb-2">Submit Application</h5>
                                <p class="text-muted mb-3">Complete the online application form or download and submit the physical application package.</p>
                                <div class="d-flex gap-2">
                                    <a href="#online-application" class="btn btn-success btn-sm">Apply Online</a>
                                    <a href="/downloads/application" class="btn btn-outline-success btn-sm">Download Form</a>
                                </div>
                            </div>
                        </div>

                        <!-- Step 3 -->
                        <div class="step-item d-flex mb-4">
                            <div class="step-number flex-shrink-0 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fs-5 fw-bold">3</span>
                            </div>
                            <div class="step-content ms-4">
                                <h5 class="fw-bold mb-2">Submit Required Documents</h5>
                                <p class="text-muted mb-3">Provide all necessary documentation including academic records, birth certificate, and photos.</p>
                                <a href="#documents" class="btn btn-outline-success btn-sm">View Documents List</a>
                            </div>
                        </div>

                        <!-- Step 4 -->
                        <div class="step-item d-flex mb-4">
                            <div class="step-number flex-shrink-0 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fs-5 fw-bold">4</span>
                            </div>
                            <div class="step-content ms-4">
                                <h5 class="fw-bold mb-2">Assessment & Interview</h5>
                                <p class="text-muted mb-3">Student assessment and family interview conducted by our admissions committee.</p>
                                <a href="#assessment" class="btn btn-outline-success btn-sm">Assessment Details</a>
                            </div>
                        </div>

                        <!-- Step 5 -->
                        <div class="step-item d-flex">
                            <div class="step-number flex-shrink-0 bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fs-5 fw-bold">5</span>
                            </div>
                            <div class="step-content ms-4">
                                <h5 class="fw-bold mb-2">Admission Decision & Enrollment</h5>
                                <p class="text-muted mb-3">Receive admission decision and complete enrollment by paying registration fees.</p>
                                <button class="btn btn-success btn-sm" disabled>Awaiting Decision</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Requirements -->
            <div id="requirements" class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0"><i class="bi bi-list-check me-2"></i>Admission Requirements</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Grade 1 Requirements -->
                        <div class="col-md-6">
                            <div class="card h-100 border-success border-2">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                                            <i class="bi bi-1-circle-fill text-success fs-3"></i>
                                        </div>
                                        <h4 class="fw-bold mb-0">Grade 1 Entry</h4>
                                    </div>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Child must turn 6 years old in 2026
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Birth Certificate
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Immunization Record
                                        </li>
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Preschool Report (if applicable)
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Grade 8-12 Requirements -->
                        <div class="col-md-6">
                            <div class="card h-100 border-primary border-2">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                                            <i class="bi bi-arrow-up-circle-fill text-success fs-3"></i>
                                        </div>
                                        <h4 class="fw-bold mb-0">Grade 8-12 Entry</h4>
                                    </div>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Satisfactory academic record
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Previous school reports (last 2 years)
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Transfer certificate from previous school
                                        </li>
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Successful assessment test
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- General Requirements -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h5 class="fw-bold mb-3">General Requirements for All Grades</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-person-check text-success mt-1 me-2"></i>
                                    <div>
                                        <strong class="d-block">Age Requirements</strong>
                                        <small class="text-muted">Must meet minimum age for grade level</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-file-text text-success mt-1 me-2"></i>
                                    <div>
                                        <strong class="d-block">Documentation</strong>
                                        <small class="text-muted">Complete application package</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-cash text-success mt-1 me-2"></i>
                                    <div>
                                        <strong class="d-block">Registration Fee</strong>
                                        <small class="text-muted">Non-refundable application fee</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-calendar-check text-success mt-1 me-2"></i>
                                    <div>
                                        <strong class="d-block">Interview</strong>
                                        <small class="text-muted">Parent/guardian interview required</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Required Documents -->
            <div id="documents" class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Required Documents</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        All documents must be certified copies. Original documents should be presented for verification.
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="document-category">
                                <h5 class="fw-bold mb-3 border-bottom pb-2">Mandatory Documents</h5>
                                <div class="list-group">
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-text text-success me-3"></i>
                                            <div>
                                                <strong>Completed Application Form</strong>
                                                <div class="text-muted small">Signed by parent/guardian</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-badge text-success me-3"></i>
                                            <div>
                                                <strong>Birth Certificate</strong>
                                                <div class="text-muted small">Unabridged certificate</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-medical text-success me-3"></i>
                                            <div>
                                                <strong>Immunization Record</strong>
                                                <div class="text-muted small">Clinic Road-to-Health card</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="document-category">
                                <h5 class="fw-bold mb-3 border-bottom pb-2">Additional Documents</h5>
                                <div class="list-group">
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-journal-text text-success me-3"></i>
                                            <div>
                                                <strong>Previous School Reports</strong>
                                                <div class="text-muted small">Last 2 years for Grade 2+</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-break text-success me-3"></i>
                                            <div>
                                                <strong>Transfer Certificate</strong>
                                                <div class="text-muted small">From previous school</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item border-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-image text-success me-3"></i>
                                            <div>
                                                <strong>Passport Photos</strong>
                                                <div class="text-muted small">2 recent color photos</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Document Upload -->
                    <div class="mt-4 p-4 bg-light rounded">
                        <h5 class="fw-bold mb-3">Document Submission</h5>
                        <p class="mb-3">Documents can be submitted through the following methods:</p>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="bi bi-upload text-success fs-1 mb-3"></i>
                                    <h6 class="fw-bold">Online Upload</h6>
                                    <p class="text-muted small mb-0">Via our application portal</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="bi bi-envelope text-success fs-1 mb-3"></i>
                                    <h6 class="fw-bold">Email</h6>
                                    <p class="text-muted small mb-0">info@greenlane.co.za</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <i class="bi bi-building text-success fs-1 mb-3"></i>
                                    <h6 class="fw-bold">In Person</h6>
                                    <p class="text-muted small mb-0">At our admissions office</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Application & Contact -->
        <div class="col-lg-3">
            <!-- Online Application Card -->
            <div id="online-application" class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-laptop me-2"></i>Online Application</h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-laptop-fill text-success fs-1"></i>
                    </div>
                    <p class="text-muted mb-4">Start your application online. Our secure portal makes the process simple and efficient.</p>
                    <a href="/apply-online" class="btn btn-success w-100 mb-3">Start Online Application</a>
                    <div class="text-center">
                        <small class="text-muted">Estimated time: 15-20 minutes</small>
                    </div>
                </div>
            </div>

            <!-- Admission Fees -->
            <div id="fees" class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Admission Fees</h5>
                </div>
                <div class="card-body p-3">
                    <div class="fee-item mb-3 p-3 border rounded">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold">Application Fee</div>
                            <div class="text-success fw-bold">R 300</div>
                        </div>
                        <small class="text-muted">Non-refundable processing fee</small>
                    </div>
                    <div class="fee-item p-3 border rounded">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold">Registration Fee*</div>
                            <div class="text-success fw-bold">See Fee Structure</div>
                        </div>
                        <small class="text-muted">*Payable upon acceptance to secure placement</small>
                    </div>
                    <a href="/fees" class="btn btn-outline-success w-100 mt-3">View Complete Fee Structure</a>
                </div>
            </div>

            <!-- Admissions Contact -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-headset me-2"></i>Admissions Office</h5>
                </div>
                <div class="card-body p-3">
                    <div class="contact-item mb-3 p-2 bg-light rounded">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-telephone text-success fs-5 me-2 mt-1"></i>
                            <div>
                                <strong class="d-block mb-1">Admissions Hotline</strong>
                                <div class="small text-muted">+27 11 492 1780</div>
                                <div class="small text-muted">+27 81 262 4572</div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="contact-item mb-3 p-2 bg-light rounded">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-envelope text-success fs-5 me-2 mt-1"></i>
                            <div>
                                <strong class="d-block mb-1">Email</strong>
                                <div class="small text-muted">info@greenlane.co.za</div>
                            </div>
                        </div>
                    </div>
                    <div class="contact-item p-2 bg-light rounded">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-clock text-success fs-5 me-2 mt-1"></i>
                            <div>
                                <strong class="d-block mb-1">Office Hours</strong>
                                <div class="small text-muted">Mon-Fri: 8:00 AM - 4:00 PM</div>
                                <div class="small text-muted">Sat: 9:00 AM - 12:00 PM</div>
                            </div>
                        </div>
                    </div>
                    <a href="/contact" class="btn btn-success w-100 mt-3">Contact Admissions</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Assessment Section -->
<div id="assessment" class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="fw-bold mb-3">Assessment & Placement Testing</h2>
                <p class="fs-5 mb-4">
                    All applicants from Grade 2 upwards are required to undergo assessment testing to ensure appropriate grade placement and to identify any learning support needs.
                </p>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start p-3 bg-white rounded shadow-sm">
                            <i class="bi bi-pencil-square text-success fs-4 me-3 mt-1"></i>
                            <div>
                                <h5 class="fw-bold mb-2">Assessment Components</h5>
                                <ul class="list-unstyled text-muted mb-0">
                                    <li class="mb-1">• Literacy & Language Skills</li>
                                    <li class="mb-1">• Numeracy & Mathematics</li>
                                    <li class="mb-1">• Cognitive Abilities</li>
                                    <li>• Problem Solving Skills</li>
                                </ul>
                            </div>
