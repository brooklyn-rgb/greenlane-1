// Pages/Admissions.cshtml.cs
using Microsoft.AspNetCore.Mvc.RazorPages;


@{
    ViewData["Title"] = "Admissions - Greenlane College";
}

<div class="container my-5">
    <h1 class="text-success mb-4">Admissions Process</h1>
    
    <div class="alert alert-info">
        <h4><i class="bi bi-info-circle-fill"></i> Registration In Progress</h4>
        <p>We are currently accepting applications for the 2025 academic year.</p>
    </div>

    <div class="card shadow mb-5">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Admission Requirements</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Required Documents</h5>
                    <ul>
                        <li>Birth Certificate (certified copy)</li>
                        <li>Latest school report</li>
                        <li>Immunization card</li>
                        <li>Two passport photos</li>
                        <li>Proof of residence</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5>Important Dates</h5>
                    <ul>
                        <li>Application Opens: January 2025</li>
                        <li>Application Closes: March 2025</li>
                        <li>Interviews: April 2025</li>
                        <li>Notification: May 2025</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-warning">
        <div class="card-header bg-warning">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Limited Time Offer</h3>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">Free Packages Available for Early Registration!</h4>
            <p class="text-center">Enroll before March 31, 2025 to receive:</p>
            <div class="row text-center">
                <div class="col-md-3">
                    <i class="bi bi-book text-success display-4"></i>
                    <p>Free Stationery Pack</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-shirt text-success display-4"></i>
                    <p>School Uniform Voucher</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-bag text-success display-4"></i>
                    <p>Sports Equipment</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-trophy text-success display-4"></i>
                    <p>Extracurricular Access</p>
                </div>
            </div>
        </div>
    </div>
</div>