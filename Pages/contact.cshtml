<!-- School Hours -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">School Hours & Operational Times</h2>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col" style="width: 40%">Day / Activity</th>
                                        <th scope="col" style="width: 30%">Hours</th>
                                        <th scope="col" style="width: 30%">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hour in Model.SchoolHours)
                                    {
                                        <tr>
                                            <td><strong>@hour.Day</strong></td>
                                            <td>@hour.Hours</td>
                                            <td><small class="text-muted">@hour.Notes</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>After-hours Contact:</strong> For emergencies outside office hours, please call our security line at <strong>+27 81 262 4572</strong>.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<style>
    .contact-hero {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .contact-info-item {
        display: flex;
        align-items: flex-start;
    }

    .department-icon {
        width: 60px;
        height: 60px;
        background-color: rgba(26, 77, 46, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .table th {
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr:hover {
        background-color: rgba(26, 77, 46, 0.05);
    }

    /* Form styling */
    .form-control:focus, .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(26, 77, 46, 0.25);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .contact-info-item {
            margin-bottom: 1.5rem;
        }
        
        #location .card {
            margin-bottom: 1.5rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Phone number formatting
        const phoneInput = document.querySelector('input[type="tel"]');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 2) {
                        value = '+' + value;
                    } else if (value.length <= 4) {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2);
                    } else if (value.length <= 7) {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2, 4) + ' ' + value.substring(4);
                    } else {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2, 4) + ' ' + value.substring(4, 7) + ' ' + value.substring(7, 11);
                    }
                }
                e.target.value = value;
            });
        }

        // Form submission feedback
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Sending...';
                    submitBtn.disabled = true;
                }
            });
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>