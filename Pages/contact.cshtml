@page
@model greenlane.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Greenlane College | Get in Touch";
}

<section class="contact-hero py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-primary mb-3">Get in Touch with Greenlane College</h1>
                <p class="lead mb-4">We're here to answer your questions and help you learn more about our educational community. Reach out to us through any of the channels below.</p>

                <div class="d-flex flex-wrap gap-3">
                    <a href="#contact-form" class="btn btn-primary btn-lg">
                        <i class="bi bi-envelope me-2"></i>Send Message
                    </a>
                    <a href="#map-section" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-geo-alt me-2"></i>Visit Us
                    </a>
                    <a href="tel:+27114921778" class="btn btn-success btn-lg">
                        <i class="bi bi-telephone me-2"></i>Call Now
                    </a>
                </div>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h3 class="h4 mb-3 text-primary">Quick Contact Info</h3>
                        <div class="contact-info-item mb-3">
                            <i class="bi bi-geo-alt-fill text-primary me-3"></i>
                            <div>
                                <strong>Main Campus Address</strong>
                                <p class="mb-0">Legal House, 32 Commissioner Street<br>Johannesburg, 2000<br>South Africa</p>
                            </div>
                        </div>
                        <div class="contact-info-item mb-3">
                            <i class="bi bi-telephone-fill text-primary me-3"></i>
                            <div>
                                <strong>General Inquiries</strong>
                                <p class="mb-0">+27 11 492 1778</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <i class="bi bi-envelope-fill text-primary me-3"></i>
                            <div>
                                <strong>Email Address</strong>
                                <p class="mb-0">info@greenlane.co.za</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="container mt-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="container mt-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

<!-- Contact Form Section -->
<section class="py-5" id="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="fw-bold text-primary mb-3">Send Us a Message</h2>
                    <p class="text-muted">Complete the form below and our team will respond promptly.</p>
                </div>

                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4 p-md-5">
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name *</label>
                                    <input type="text" class="form-control" asp-for="Name" required>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" asp-for="Phone">
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Subject *</label>
                                    <select class="form-select" asp-for="Subject" required>
                                        <option value="">Select a subject</option>
                                        @foreach (var subject in Model.Subjects)
                                        {
                                            <option value="@subject">@subject</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Subject" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Your Message *</label>
                                    <textarea class="form-control" rows="6" asp-for="Message" required></textarea>
                                    <span asp-validation-for="Message" class="text-danger small"></span>
                                    <div class="form-text">Please provide as much detail as possible so we can assist you better.</div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="SubscribeToNewsletter">
                                        <label class="form-check-label" asp-for="SubscribeToNewsletter">
                                            I would like to receive updates about school events, news, and important announcements.
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                                        <i class="bi bi-send me-2"></i>Send Message
                                    </button>
                                    <p class="text-muted text-center mt-3 small">
                                        <i class="bi bi-shield-check me-1"></i>Your information is secure and will only be used to respond to your inquiry.
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Departments & Contacts -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Contact Specific Departments</h2>

        <div class="row g-4">
            @foreach (var dept in Model.Departments)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="department-icon mb-3">
                                <i class="bi bi-person-badge text-primary fs-3"></i>
                            </div>
                            <h5 class="card-title text-primary">@dept.Department</h5>
                            <p class="card-text mb-2"><strong>Contact:</strong> @dept.Person</p>
                            <p class="card-text mb-1">
                                <i class="bi bi-telephone me-2 text-muted"></i>
                                @dept.Phone <small class="text-muted">(Ext: @dept.Ext)</small>
                            </p>
                            <p class="card-text mb-1">
                                <i class="bi bi-envelope me-2 text-muted"></i>
                                <a href="mailto:@dept.Email" class="text-decoration-none">@dept.Email</a>
                            </p>
                            <p class="card-text mt-3">
                                <small class="text-muted"><i class="bi bi-clock me-1"></i> @dept.Hours</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Map & Location -->
<section class="py-5" id="map-section">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-7">
                <h2 class="fw-bold mb-4">Find Our Campus</h2>
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-0">
                        <div class="ratio ratio-16x9">
                            <!-- Google Maps Embed -->
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3581.056832812689!2d28.047089475997537!3d-26.16654527720005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e950c1b6c5d2e47%3A0x58b8c5b5b5b5b5b5!2sLegal%20House%2C%2032%20Commissioner%20St%2C%20Johannesburg%2C%202000%2C%20South%20Africa!5e0!3m2!1sen!2sza!4v1234567890123!5m2!1sen!2sza"
                                    style="border:0;"
                                    allowfullscreen=""
                                    loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card border-primary">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">
                            <i class="bi bi-info-circle me-2"></i>Visiting Information
                        </h3>

                        <div class="mb-4">
                            <h5>Parking Facilities</h5>
                            <p class="mb-0">Visitor parking is available in the building's secure underground parking. Please obtain a visitor's pass from the reception desk.</p>
                        </div>

                        <div class="mb-4">
                            <h5>Public Transport Access</h5>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-train-front text-primary me-2"></i>Nearest Gautrain: Park Station (10 min walk)</li>
                                <li><i class="bi bi-bus-front text-primary me-2"></i>Rea Vaya Bus: BRT routes available</li>
                                <li><i class="bi bi-taxi-front text-primary me-2"></i>Taxi rank: 5-minute walk from campus</li>
                            </ul>
                        </div>

                        <div class="mb-4">
                            <h5>Security Protocols</h5>
                            <p class="mb-0">All visitors must sign in at reception and wear a visitor badge while on campus. CCTV surveillance is in operation 24/7.</p>
                        </div>

                        <a href="/Location" class="btn btn-outline-primary w-100 mt-3">
                            <i class="bi bi-directions me-2"></i>Get Detailed Directions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- School Hours -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">School Hours & Operational Times</h2>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col" style="width: 40%">Day / Activity</th>
                                        <th scope="col" style="width: 30%">Hours</th>
                                        <th scope="col" style="width: 30%">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hour in Model.SchoolHours)
                                    {
                                        <tr>
                                            <td><strong>@hour.Day</strong></td>
                                            <td>@hour.Hours</td>
                                            <td><small class="text-muted">@hour.Notes</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>After-hours Contact:</strong> For emergencies outside office hours, please call our security line at <strong>+27 11 492 1790</strong>.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Emergency Contact -->
<section class="py-5 bg-danger bg-opacity-10">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h3 class="fw-bold mb-2"><i class="bi bi-exclamation-triangle-fill me-2"></i>Emergency Contact</h3>
                <p class="mb-0">For urgent matters requiring immediate attention outside of regular hours, please use our dedicated emergency contact line.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="tel:+27114921790" class="btn btn-danger btn-lg">
                    <i class="bi bi-telephone me-2"></i>Emergency: +27 11 492 1790
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-hero {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .contact-info-item {
        display: flex;
        align-items: flex-start;
    }

    .department-icon {
        width: 60px;
        height: 60px;
        background-color: rgba(26, 77, 46, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .table th {
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr:hover {
        background-color: rgba(26, 77, 46, 0.05);
    }

    /* Form styling */
    .form-control:focus, .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(26, 77, 46, 0.25);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .contact-info-item {
            margin-bottom: 1.5rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Phone number formatting
        const phoneInput = document.querySelector('input[type="tel"]');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 2) {
                        value = '+' + value;
                    } else if (value.length <= 4) {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2);
                    } else if (value.length <= 7) {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2, 4) + ' ' + value.substring(4);
                    } else {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2, 4) + ' ' + value.substring(4, 7) + ' ' + value.substring(7, 11);
                    }
                }
                e.target.value = value;
            });
        }

        // Form submission feedback
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Sending...';
                    submitBtn.disabled = true;
                }
            });
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>