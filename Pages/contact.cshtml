@page
@model greenlane.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Greenlane College | Get in Touch";
}

<section class="contact-hero py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-success mb-3">Get in Touch with Greenlane College</h1>
                <p class="lead mb-4">We're here to answer your questions and help you learn more about our educational community. Reach out to us through any of the channels below.</p>

                <div class="d-flex flex-wrap gap-3">
                    <a href="#contact-form" class="btn btn-success btn-lg">
                        <i class="bi bi-envelope me-2"></i>Send Message
                    </a>
                    <a href="#location" class="btn btn-outline-success btn-lg">
                        <i class="bi bi-geo-alt me-2"></i>Visit Us
                    </a>
                    <a href="tel:+27114921778" class="btn btn-success btn-lg">
                        <i class="bi bi-telephone me-2"></i>Call Now
                    </a>
                </div>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h3 class="h4 mb-3 text-success">Quick Contact Info</h3>
                        <div class="contact-info-item mb-3">
                            <i class="bi bi-geo-alt-fill text-success me-3"></i>
                            <div>
                                <strong>Main Campus Address</strong>
                                <p class="mb-0">Legal House, 32 Commissioner Street<br>Johannesburg, 2000<br>South Africa</p>
                            </div>
                        </div>
                        <div class="contact-info-item mb-3">
                            <i class="bi bi-telephone-fill text-success me-3"></i>
                            <div>
                                <strong>General Inquiries</strong>
                                <p class="mb-0">011 492 1778</p>
                                <p class="mb-0">081 262 4572</p>
                              
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <i class="bi bi-envelope-fill text-success me-3"></i>
                            <div>
                                <strong>Email Address</strong>
                                <p class="mb-0">info@greenlane.co.za</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="container mt-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="container mt-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

<!-- Contact Form Section -->
<section class="py-5" id="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="fw-bold text-success mb-3">Send Us a Message</h2>
                    <p class="text-muted">Complete the form below and our team will respond promptly.</p>
                </div>

                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4 p-md-5">
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name *</label>
                                    <input type="text" class="form-control" asp-for="Name" required>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" asp-for="Phone">
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Subject *</label>
                                    <select class="form-select" asp-for="Subject" required>
                                        <option value="">Select a subject</option>
                                        @foreach (var subject in Model.Subjects)
                                        {
                                            <option value="@subject">@subject</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Subject" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Your Message *</label>
                                    <textarea class="form-control" rows="6" asp-for="Message" required></textarea>
                                    <span asp-validation-for="Message" class="text-danger small"></span>
                                    <div class="form-text">Please provide as much detail as possible so we can assist you better.</div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="SubscribeToNewsletter">
                                        <label class="form-check-label" asp-for="SubscribeToNewsletter">
                                            I would like to receive updates about school events, news, and important announcements.
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-success btn-lg w-100 py-3">
                                        <i class="bi bi-send me-2"></i>Send Message
                                    </button>
                                    <p class="text-muted text-center mt-3 small">
                                        <i class="bi bi-shield-check me-1"></i>Your information is secure and will only be used to respond to your inquiry.
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

