@page
@{
    ViewData["Title"] = "Location & Directions - Greenlane College";
}

<!-- Map & Location Section -->
<section class="py-5 bg-light" id="location">
    <div class="container">
        <h1 class="text-center fw-bold mb-5 text-primary">Our Campus Location</h1>

        <div class="row align-items-center g-5">
            <!-- Map Section -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-header bg-primary text-white py-3">
                        <h3 class="h4 mb-0">
                            <i class="bi bi-geo-alt-fill me-2"></i>Campus Map
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3580.826011887264!2d28.032558476021623!3d-26.206451777096782!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e950ea41a237a4b%3A0x9cde22f95554bfb7!2sGreenlane%20College!5e0!3m2!1sen!2sza!4v1712425800000!5m2!1sen!2sza"
                                    style="border:0;"
                                    allowfullscreen=""
                                    loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"
                                    title="Greenlane College Location Map">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location Details -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body p-4">
                        <h2 class="fw-bold mb-4 text-primary">
                            <i class="bi bi-buildings me-2"></i>Greenlane College
                        </h2>

                        <!-- Physical Address -->
                        <div class="mb-4">
                            <h5 class="h6 fw-semibold text-primary mb-3">Address</h5>
                            <p class="mb-0">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                Legal House, 32 Commissioner Street<br>
                                Corner Ntemi Piliso<br>
                                Johannesburg 2001, South Africa
                            </p>
                            <small class="text-muted mt-2 d-block">
                                <i class="bi bi-geo me-1"></i>
                                GPS: -26.2064518, 28.0351334
                            </small>
                        </div>

                        <!-- Contact Details -->
                        <div class="mb-4">
                            <h5 class="h6 fw-semibold text-primary mb-3">Contact Information</h5>
                            <p class="mb-2">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                <a href="tel:+27114921778" class="text-decoration-none text-dark">+27 11 492 1778</a>
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-phone text-primary me-2"></i>
                                <a href="tel:0812624572" class="text-decoration-none text-dark">081 262 4572</a>
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                <a href="mailto:info@greenlane.co.za" class="text-decoration-none text-dark">info@greenlane.co.za</a>
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-clock text-primary me-2"></i>
                                <span class="text-muted">Mon-Fri 8:00 AM - 5:00 PM</span>
                            </p>
                        </div>

                        <!-- Access -->
                        <div class="mb-4">
                            <h5 class="h6 fw-semibold text-primary mb-3">
                                <i class="bi bi-signpost-split me-2"></i>Getting Here
                            </h5>
                            <ul class="list-unstyled small">
                                <li class="mb-2"><i class="bi bi-bus-front text-success me-2"></i>Metrobus routes stop nearby</li>
                                <li class="mb-2"><i class="bi bi-train-front text-success me-2"></i>Park Station (Short walk)</li>
                                <li class="mb-2"><i class="bi bi-car-front text-success me-2"></i>Secure on-site parking</li>
                            </ul>
                        </div>

                        <!-- Safety -->
                        <div class="mb-4">
                            <h5 class="h6 fw-semibold text-primary mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>Emergency
                            </h5>
                            <p class="mb-0">
                                <a href="tel:+27114921790" class="text-danger text-decoration-none fw-bold">
                                    <i class="bi bi-telephone-fill me-2"></i>+27 11 492 1790
                                </a>
                            </p>
                        </div>

                        <!-- Actions -->
                        <div class="mt-4">
                            <a href="https://www.google.com/maps?ll=-26.206452,28.035133&z=16&t=m&hl=en&gl=ZA&mapclient=embed&cid=11303510569020342199"
                               class="btn btn-primary w-100 mb-3 py-2 fw-bold"
                               target="_blank"
                               rel="noopener">
                                <i class="bi bi-directions me-2"></i>Directions
                            </a>
                            <a href="/Contact" class="btn btn-outline-primary w-100 py-2">
                                <i class="bi bi-envelope me-2"></i>Message Us
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


        <!-- Additional Location Information -->
        <div class="row mt-5">
            <div class="col-lg-4 mb-4">
                <div class="card border-primary h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-3">
                            <i class="bi bi-p-circle me-2"></i>Parking Information
                        </h5>
                        <p class="card-text">
                            Secure underground parking is available for visitors. Please obtain a visitor's pass from the main reception desk upon arrival.
                        </p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle text-success me-2"></i>24/7 Security surveillance</li>
                            <li><i class="bi bi-check-circle text-success me-2"></i>Designated visitor spots</li>
                            <li><i class="bi bi-check-circle text-success me-2"></i>Accessible parking available</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card border-success h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success mb-3">
                            <i class="bi bi-clock-history me-2"></i>Visiting Hours
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><strong>Monday - Friday:</strong> 8:00 AM - 5:00 PM</li>
                            <li class="mb-2"><strong>Saturday:</strong> 9:00 AM - 1:00 PM</li>
                            <li class="mb-2"><strong>Sunday:</strong> Closed</li>
                            <li><strong>Public Holidays:</strong> Closed</li>
                        </ul>
                        <div class="alert alert-info mt-3 mb-0 small">
                            <i class="bi bi-info-circle me-2"></i>
                            Appointments are recommended for admissions consultations.
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card border-warning h-100">
                    <div class="card-body">
                        <h5 class="card-title text-warning mb-3">
                            <i class="bi bi-shield-check me-2"></i>Campus Security
                        </h5>
                        <p class="card-text">
                            All visitors must sign in at reception and wear a visitor badge while on campus premises.
                        </p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-camera-video me-2"></i>CCTV surveillance 24/7</li>
                            <li><i class="bi bi-person-badge me-2"></i>Visitor registration required</li>
                            <li><i class="bi bi-shield-fill-check me-2"></i>Security patrols on-site</li>
                        </ul>
                        <a href="tel:+27114921790" class="btn btn-warning btn-sm mt-2">
                            <i class="bi bi-telephone me-1"></i>Security: +27 11 492 1790
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #location .card {
        transition: transform 0.3s ease;
    }
    
    #location .card:hover {
        transform: translateY(-5px);
    }
    
    .bi {
        font-size: 1.1em;
    }
    
    .card-title .bi {
        font-size: 1.2em;
    }
</style>