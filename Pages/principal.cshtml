@{
    ViewData["Title"] = "Greenlane College | Principal's Message";
}

<!-- Hero Banner -->
<div class="position-relative">
    <div class="hero-banner" style="background: linear-gradient(rgba(26, 77, 46, 0.85), rgba(26, 77, 46, 0.9)), url('/images/banner/principal-banner.jpg') center/cover no-repeat; min-height: 60vh;">
