<style>
    /* Hero Banner */
    .hero-banner {
        display: flex;
        align-items: center;
    }

    /* Principal Photo */
    .principal-photo img {
        transition: transform 0.3s ease;
    }

        .principal-photo img:hover {
            transform: scale(1.03);
        }

    /* Message Styling */
    .lead-message {
        position: relative;
        overflow: hidden;
    }

        .lead-message i.bi-quote {
            opacity: 0.3;
            position: absolute;
            top: -20px;
            left: -10px;
        }

    /* Location Card */
    .location-card {
        transition: all 0.3s ease;
    }

        .location-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* Closing Message */
    .closing-message {
        transition: all 0.3s ease;
    }

        .closing-message:hover {
            transform: translateX(5px);
        }

    /* Signature */
    .signature-section {
        border-top: 2px solid #e9ecef;
    }

    /* Team Cards */
    .card.card-link {
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .card.card-link:hover {
            border-color: #1a4d2e;
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(26, 77, 46, 0.1);
        }

    /* Fact Boxes */
    .fact-box {
        transition: all 0.3s ease;
        border-radius: 10px;
    }

        .fact-box:hover {
            background: white;
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    /* Responsive Adjustments */
    @@media (max-width: 992px) {
        .principal-photo img {
            max-width: 250px;
        }
    }

    @@media (max-width: 768px) {
        .hero-banner {
            min-height: 50vh;
            text-align: center;
        }

        .display-3 {
            font-size: 2rem;
        }

        .lead {
            font-size: 1.2rem;
        }

        .signature-section {
            text-align: center;
        }
    }

    /* Typography */
    .message-content p {
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }

    /* Card Styling */
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    /* Animation */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message-content > div {
        animation: fadeInUp 0.5s ease forwards;
    }

        .message-content > div:nth-child(1) {
            animation-delay: 0.1s;
        }

        .message-content > div:nth-child(2) {
            animation-delay: 0.2s;
        }

        .message-content > div:nth-child(3) {
            animation-delay: 0.3s;
        }

        .message-content > div:nth-child(4) {
            animation-delay: 0.4s;
        }

        .message-content > div:nth-child(5) {
            animation-delay: 0.5s;
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Animate elements on scroll
        const animateOnScroll = function () {
            const elements = document.querySelectorAll('.card, .fact-box, .location-card');

            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;

                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };

        // Set initial state for animation
        document.querySelectorAll('.card, .fact-box, .location-card').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });

        // Animate on scroll
        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll(); // Initial check

        // Add hover effect to fact boxes
        document.querySelectorAll('.fact-box').forEach(box => {
            box.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-5px)';
            });

            box.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>